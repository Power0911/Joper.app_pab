<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/joper" />

    <Button
        android:id="@+id/btn_reboquesCisternas"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:cornerRadius="10dp"  
        android:text="Reboques Cisternas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reboques" />

    <Button
        android:id="@+id/btn_Chisses"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:text="Chisses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reboquesCisternas" />

    <Button
        android:id="@+id/btn_Equipamento"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:text="Equipamento de Discos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Chisses" />

    <Button
        android:id="@+id/btn_fresas"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:text="Fresas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Equipamento" />

    <Button
        android:id="@+id/btn_Corta"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:text="Corta-Mato E Trituradores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fresas" />

    <Button
        android:id="@+id/btn_Diverso"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:text="Equipamento Diverso"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Corta" />

    <Button
        android:id="@+id/btn_reboques1"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/joper"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:text="Reboques"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</RelativeLayout>